@model Invent.Web.Data.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">@ViewData["Title"]</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="col-md-10 offset-1">
                    <br />
                    <h5 style="text-align:center"><i class="fas fa-exclamation-triangle fa-2x"></i><br /><br />Operation not permitted</h5>
                    <br />
                    <p>
                        The selected category is referenced by at least one product in the inventory.
                    </p>
                    <br />
                    <p>
                        If you still want to delete this supplier you must edit it out in your products inventory.
                    </p>
                </div>
                <br />
                <img src="~/images/ams.png" alt="Logo" class="center" style="width: 200px;" />
            </div>
        </div>
    </div>
</div>

<style>
    .center {
        display: block;
        margin-top: 5%;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
</style>

@section Scripts {
    <script type="text/javascript">

        $("#myModal").modal('show');

        $('#myModal').on('hidden.bs.modal', function (e) {

            document.location.href = "/Choices";
        })
    </script>
}
