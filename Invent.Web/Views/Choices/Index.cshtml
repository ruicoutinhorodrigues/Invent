@model Invent.Web.Models.ChoicesViewModel
@{
    ViewData["Title"] = "Index";
    var context = @Context.Request.Path + @Context.Request.QueryString;
}

    <div class="text-center">
        <h1 style="color: #E9FAFF; background-color: #0092CB; padding: 1%;">Admin page</h1>
    </div>


<div class="container" id="box">
    <div class="row">
        <div class="col-md-4">
            <div class="table-title">
                <div class="row">
                    <div class="col-md-8">
                        <h5>Categories</h5>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-primary btn-block" asp-controller="Categories" asp-action="Create" asp-route-returnUrl=@context>New</a>
                    </div>
                </div>
            </div>
            <br />
            <div class="table-wrapper-scroll-y my-custom-scrollbar" id="style1">
                <table class="table">
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td style="text-align:right">
                                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br /><br />
        <div class="clearfix"></div>
        <br /><br />
        <div class="col-md-4">
            <div class="table-title">
                <div class="row">
                    <div class="col-md-8">
                        <h5>Status</h5>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-primary btn-block" asp-controller="Status" asp-action="Create" asp-route-returnUrl=@context>New</a>
                    </div>
                </div>
            </div>
            <br />
            <div class="table-wrapper-scroll-y my-custom-scrollbar" id="style1">
                <table class="table">
                    <tbody>
                        @foreach (var item in Model.Status)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td style="text-align:right">
                                    <a asp-controller="Status" asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br /><br />
        <div class="clearfix"></div>
        <br /><br />
        <div class="col-md-4">
            <div class="table-title">
                <div class="row">
                    <div class="col-md-8">
                        <h5>Locations</h5>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-primary btn-block" asp-controller="Locations" asp-action="Create" asp-route-returnUrl=@context>New</a>
                    </div>
                </div>
            </div>
            <br />
            <div class="table-wrapper-scroll-y my-custom-scrollbar" id="style1">
                <table class="table">
                    <tbody>
                        @foreach (var item in Model.Locations)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td style="text-align:right">
                                    <a asp-controller="Locations" asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<br />

<div class="container" id="box">
    <div class="row">
        <div class="col-md-5 offset-md-1">
            <div class="table-title">
                <div class="row">
                    <div class="col-md-8">
                        <h5>Manufacturers</h5>
                    </div>
                    <div class="col-md-4">
